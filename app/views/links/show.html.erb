<h1><%= @link.title %></h1>


<h2><%= @link.url %></h2>
<% if @link.user == current_user %>
  <%= link_to 'Edit Link', edit_link_path(@link) %>
  <%= link_to ' Delete Link', link_path(@link), class: "delete", method: :delete, data: { confirm: 'Are you really sure you want to delete this link?' } %>
<% end %>
